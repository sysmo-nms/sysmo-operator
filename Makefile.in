.PHONY: all clean_all packages

all:
	make -C @CMAKE_BINARY_DIR@ all

clean_all:
	rm -rf @CMAKE_BINARY_DIR@; rm Makefile

%:
	make -C @CMAKE_BINARY_DIR@ $@

packages: all
	cd @CMAKE_BINARY_DIR@
	osc checkout home\:sysmo\:unstable
	cd home\:sysmo\:unstable
	cp ../../support/pkgs/obs/* .
	osc up
	osc commit
	@echo "See result at: https://build.opensuse.org/package/show/home:sysmo:unstable/sysmo-operator"
